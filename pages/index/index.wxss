/* mp-cells */
.weui-cells{
  margin-top: 80rpx; /*120*/
  padding: 10rpx 10rpx 0;
  background-color: transparent;
}
.weui-cell__bd {
  overflow: hidden;
}
.my-cells-code .weui-cells {
  margin-top: 40rpx;
}
.weui-cell_wxss.weui-cell_wxss:before,
.cell--weui-cell_wxss.cell--weui-cell_wxss:before,
.weui-cells:after, .weui-cells:before {
  display: none !important;
}
.weui-cell {
  width: 100%;
  padding: 5rpx 46rpx;
  margin-bottom: 50rpx;
  border-radius: 50rpx;
  box-shadow: 1rpx 4rpx 16rpx 0rpx rgba(177, 177, 177, 0.5);
  background-color: #fff;
  text-align: center;
}
.weui-input {
  height: 80rpx;
  min-height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #FA8623;
}
.input-placeholder {
  color: #333;
}
.form-submit {
  width: 100% !important;
  height: 90rpx;
  margin: 55rpx 0 0;
  padding: 0;
  min-height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #fff;
  border-radius: 50rpx;
  background: linear-gradient(134deg, #FFB756 0%, #FA8220 100%);
  box-shadow: 1rpx 4rpx 16rpx 0rpx rgba(177, 177, 177, 0.5);
}
.button-hover {
  opacity: 0.92;
}
.fold {
  position: relative;
  width: 100%;
}
.fold::after {
  content: '';
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-25%);
  border-left: 15rpx solid transparent;
  border-top: 12rpx solid #666;
  border-bottom: 12rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-radius: 6rpx;
  transform-origin: center 25%;
  transition: all .3s;
}
.current.fold::after {
  transform: translateY(-25%) rotate(180deg);
}