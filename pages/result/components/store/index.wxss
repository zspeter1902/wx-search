/* pages/result/components/store/index.wxss */
.store {
  /* margin-top: 50rpx; */
}
.store-logo {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border: 1rpx solid #979797;
}
.store-base {
  font-size: 24rpx;
  color: #333;
}
.base-margin {
  margin-left: 20rpx;
}
.store-activity {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #333;
}
.store-activity + .store-activity {
  margin-top: 10rpx;
}
.tag {
  display: inline-block;
  height: 40rpx;
  border: 1rpx solid #FA8623;
  padding: 4rpx 14rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  color: #FA9137;
  line-height: 34rpx;
  border-radius: 4rpx;
}
/* banner */
.store-banner {
  margin-top: 12rpx;
  margin-bottom: 10rpx;
}
.store-banner-pic {
  width: 100%;
  height: 261rpx;
  margin-top: 18rpx;
  background-color: #ddd;
}
.store-pic {
  width: 162rpx;
  height: 162rpx;
  margin-top: 10rpx;
  border: 1rpx solid #979797;
}