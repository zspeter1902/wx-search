.painter {
  position: absolute;
  bottom: 0;
  overflow: hidden;
  z-index: -10;
}
.widget {
  position: absolute;
  z-index: -1;
}
.result-title {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
}
.relation {
  display: block;
  margin: 0 -16rpx;
}
.relation-item {
  position: relative;
  display: block;
  padding: 40rpx 40rpx 34rpx 52rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.relation-item + .relation-item {
  margin-top: 30rpx;
}
.diagnosis {
  margin: 0 -16rpx;
}
.diagnosis-item {
  margin-bottom: 30rpx;
  padding: 25rpx 20rpx 25rpx 30rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
}
.diagnosis-name {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.capacity {
  margin: 0 -16rpx;
  padding: 20rpx 45rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.capacity-desc {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
}
/* mp-cells */
.form-submit {
  position: relative;
  width: calc(100% - 34rpx - 14rpx) !important;
  height: 90rpx;
  margin: 60rpx 14rpx 70rpx 34rpx;
  padding: 0;
  min-height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 50rpx;
  background: linear-gradient(134deg, #FFB756 0%, #FA8220 100%);
  box-shadow: 1rpx 4rpx 16rpx 0rpx rgba(177, 177, 177, 0.5);
  z-index: 12;
}
.button-hover {
  opacity: 0.92;
}
.watermark {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.watermark .img {
  width: 750rpx;
  height: 1334rpx;
}