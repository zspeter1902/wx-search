.result-title {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
}
.relation {
  display: block;
  margin: 0 -16rpx;
}
.relation-item {
  position: relative;
  display: block;
  padding: 40rpx 40rpx 34rpx 52rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.relation-item + .relation-item {
  margin-top: 30rpx;
}
.checkbox {
  position: absolute;
  left: 10rpx;
  top: 140rpx;
  /* transform: translateY(-50%); */
}
.diagnosis {
  margin: 0 -16rpx;
  padding: 30rpx 45rpx 0;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.diagnosis-item {
  padding-bottom: 30rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 34rpx;
}
.diagnosis-item:nth-child(2n+1) {
  flex: 0 0 38%;
}
.diagnosis-item:nth-child(2n) {
  flex: 0 0 62%;
}
.capacity {
  margin: 0 -16rpx;
  padding: 20rpx 45rpx;
  box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.capacity-item {
  display: block;
}
/* mp-cells */
.form-submit {
  width: calc(100% - 34rpx - 14rpx) !important;
  height: 90rpx;
  margin: 60rpx 14rpx 70rpx 34rpx;
  padding: 0;
  min-height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 50rpx;
  background: linear-gradient(134deg, #FFB756 0%, #FA8220 100%);
  box-shadow: 1rpx 4rpx 16rpx 0rpx rgba(177, 177, 177, 0.5);
}
.button-hover {
  opacity: 0.92;
}
/* 自定义样式.... */
radio .wx-radio-input {
  height: 28rpx;
  width: 28rpx;
  margin-right: 10rpx;
  /* margin-top: -8rpx; */
  border-radius: 50%;
  border: 2rpx solid #000;
  background: transparent;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #FA8623 !important;
  background: #FA8623 !important;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 28rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 28rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #FA8623;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
/*checkbox 整体大小  */
checkbox {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: top;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  margin-top: -4rpx;
  border-radius: 15rpx;
  border-color: #000;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FA8623;
  border-color: #FA8623;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}