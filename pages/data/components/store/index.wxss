/* pages/data/components/base/index.wxss */
.store {
  width: 100%;
  padding: 30rpx 20rpx 30rpx 20rpx;
  border-radius: 8rpx 8rpx 4rpx 4rpx;
}
.store .box {
  margin-bottom: 30rpx;
}
.table-title {
  margin-top: 26rpx;
  border: 1rpx solid #dedede;
  border-bottom: none;
  font-size: 28rpx;
  color: #423889;
  background-color: #f7d9ff;
  line-height: 60rpx;
}
.table-header, .table-row {
  background-color: #f5f5f5;
}
.table-row view:nth-child(2),
.table-header view:nth-child(2) {
  background-color: #fff7d0;
}
.table-row view:nth-child(3),
.table-header view:nth-child(3) {
  background-color: #def1ff;
}
.canvas {
  width: 100%;
  height: 600rpx;
}
.canvas-line {
  height: 480rpx;
}
.canvas-bar {
  height: 400rpx;
}
.canvas-pie {
  height: 500rpx;
}
ec-canvas {
  display: block;
  width: 100%;
  height: 100%;
}
