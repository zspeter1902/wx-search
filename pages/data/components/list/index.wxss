.info {
  padding-top: 30rpx;
  padding-bottom: 40rpx;
  border-radius: 8rpx 8rpx 4rpx 4rpx;
}
.info-list-box {
  position: relative;
  padding: 0 26rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.info-list-box:first-child::before {
  content: '';
  position: absolute;
  right: 0;
  top: 28rpx;
  bottom: 0;
  width: 1rpx;
  background-color: #dedede;
  transform: scaleX(.5);
}
.list-title {
  margin-bottom: 24rpx;
  color: #3b3085;
  font-weight: bold;
}
/* .info-list {
  height: 420rpx;
} */
.info-list .list {
  margin-bottom: 20rpx;
  color: #555;
}
.btn {
  width: 100% !important;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #CA6FFF;
  color: #fff;
  font-weight: normal;
  border-radius: 8rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}
.button-hover {
  opacity: 0.8;
}
.tip {
  padding: 40rpx 20rpx;
  color: #999
}
/* 弹窗 */
.dialog-container {
  position: relative;
  z-index: 2;
}
.dialog-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog-header {
  position: relative;
}
.dialog-title {
  display: inline-block;
  margin: 0rpx 4rpx 20rpx;
  color: #fff;
  font-size: 50rpx;
  line-height: 70rpx;
  font-weight: 600;
  text-shadow: 0 3rpx 3rpx #b04aec;
  font-family: '黑体';
}
.dialog-input {
  height: 70rpx;
  margin: 85rpx 32rpx 108rpx;
  padding: 0 40rpx;
  background-color: #fff;
  font-size: 26rpx;
  text-align: left;
}
.input-placeholder {
  color: #999;
}
.dialog-submit {
  width: 100% !important;
  padding: 20rpx;
  margin-bottom: 6rpx;
  color: #3B3085;
  font-weight: bold;
  font-size: 26rpx;
  font-family: '黑体';
  border-radius: 0;
  line-height: 40rpx;
}